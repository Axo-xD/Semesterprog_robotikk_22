<launch>

  <arg name="robot_name"  default="trash_arm"/>
  <arg name="init_x_pos" default="0.0"/>
  <arg name="init_y_pos" default="0.0"/>
  <arg name="init_z_pos" default="0.0"/>
  <arg name="init_yaw"   default="0.0"/>

  <param name="robot_description" command="$(find xacro)/xacro $(find semesterprosjekt)/urdf/trash_arm.urdf.xacro" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
    args="-urdf -model $(arg robot_name) -x $(arg init_x_pos) -y $(arg init_y_pos) -z $(arg init_z_pos) -Y $(arg init_yaw) -param robot_description" />

<!-- CONTROLLER -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
        <param name="publish_frequency" type="double" value="100.0" />
        <param name="tf_prefix" value="mobile_manipulator" />
      </node>

      <rosparam file="$(find semesterprosjekt)/config/joint_controller.yaml" command="load"/>

      <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="trash_arm"
        args="joint_state_controller CONTROLLER_ARM_BASE CONTROLLER_JOINT_1 CONTROLLER_JOINT_2 CONTROLLER_JOINT_3 CONTROLLER_JOINT_4 CONTROLLER_JOINT_5 CONTROLLER_JOINT_6 CONTROLLER_JOINT_7"/>

</launch>
